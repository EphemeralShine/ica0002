$TTL	604800
{% for vm in groups['dns_servers'] %}
{{ domain }}.	IN	SOA	{{ vm }}.{{ domain }}. danka.{{ domain }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{{ domain }}.	IN	NS	{{ vm }}
{% endfor %}

{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}

{% for vm in groups['db_servers'] %}
db IN CNAME {{ vm }}
{% endfor %}

{% for vm in groups['web_servers'] %}
nginx IN CNAME {{ vm }}
{% endfor %}

backup	IN	A	{{ backup_server }}